{
    "manifest_version": 2,

    "name": "TeaVM debugger agent",
    "description": "TeaVM debugger agent, that sends RDP commands over WebSocket",
    "version": "1.0",

    "permissions" : ["debugger", "activeTab", "tabs"],

    "browser_action" : {
        "default_icon": "ghost.png",
        "default_title ": "Connect to TeaVM debugger"
    },

    "background": {
        "scripts": ["main.js"],
        "persistent": false
    }
}